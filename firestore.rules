/**
 * @fileoverview Firestore Security Rules for the Student Journal application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has complete control over their data,
 * and no user can access another user's data.  All data is scoped under the `/users/{userId}` path.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/journalEntries/{journalEntryId}: Stores journal entries for each user.
 * - /users/{userId}/activities/{activityId}: Stores activities for each user.
 * - /users/{userId}/problems/{problemId}: Stores problems solved for each user.
 * - /users/{userId}/todos/{todoId}: Stores to-do items for each user.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - Listing operations are restricted to the owner.
 * - The ruleset does not enforce a specific data schema beyond authorization fields, allowing for rapid prototyping and iteration.
 *
 * Denormalization for Authorization:
 * - The 'userId' is embedded in the path for all subcollections under `/users/{userId}`.
 *   This allows simple, performant rules based on `request.auth.uid` without needing extra reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants access to user documents based on ownership.
     * @path /users/{userId}
     * @allow (create) User with ID 'user_abc' can create their own profile.
     *   Request: auth.uid = 'user_abc', resource.data.id = 'user_abc'
     * @allow (get, update, delete) User with ID 'user_abc' can read/write their own profile.
     *   Request: auth.uid = 'user_abc'
     * @deny (create) User with ID 'user_abc' cannot create a profile for another user.
     *   Request: auth.uid = 'user_abc', resource.data.id = 'user_xyz'
     * @deny (get, update, delete) User with ID 'user_xyz' cannot read/write the profile of user 'user_abc'.
     *   Request: auth.uid = 'user_xyz'
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants access to user profile documents (e.g., stats).
     * @path /users/{userId}/profile/{document}
     */
    match /users/{userId}/profile/{document} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    /**
     * @description Grants access to journal entry documents based on ownership.
     * @path /users/{userId}/journalEntries/{journalEntryId}
     * @allow (create) User with ID 'user_abc' can create a journal entry.
     *   Request: auth.uid = 'user_abc'
     * @allow (get, list, update, delete) User with ID 'user_abc' can read/write their own journal entries.
     *   Request: auth.uid = 'user_abc'
     * @deny (get, list, update, delete) User with ID 'user_xyz' cannot read/write the journal entries of user 'user_abc'.
     *   Request: auth.uid = 'user_xyz'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/journalEntries/{journalEntryId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }


    /**
     * @description Grants access to activity documents based on ownership.
     * @path /users/{userId}/activities/{activityId}
     * @allow (create) User with ID 'user_abc' can create an activity.
     *   Request: auth.uid = 'user_abc'
     * @allow (get, list, update, delete) User with ID 'user_abc' can read/write their own activities.
     *   Request: auth.uid = 'user_abc'
     * @deny (get, list, update, delete) User with ID 'user_xyz' cannot read/write the activities of user 'user_abc'.
     *   Request: auth.uid = 'user_xyz'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/activities/{activityId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants access to problem documents based on ownership.
     * @path /users/{userId}/problems/{problemId}
     * @allow (create) User with ID 'user_abc' can create a problem.
     *   Request: auth.uid = 'user_abc'
     * @allow (get, list, update, delete) User with ID 'user_abc' can read/write their own problems.
     *   Request: auth.uid = 'user_abc'
     * @deny (get, list, update, delete) User with ID 'user_xyz' cannot read/write the problem of user 'user_abc'.
     *   Request: auth.uid = 'user_xyz'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/problems/{problemId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Grants access to to-do documents based on ownership.
     * @path /users/{userId}/todos/{todoId}
     * @allow (create) User with ID 'user_abc' can create a to-do.
     *   Request: auth.uid = 'user_abc'
     * @allow (get, list, update, delete) User with ID 'user_abc' can read/write their own to-dos.
     *   Request: auth.uid = 'user_abc'
     * @deny (get, list, update, delete) User with ID 'user_xyz' cannot read/write the to-do of user 'user_abc'.
     *   Request: auth.uid = 'user_xyz'
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/todos/{todoId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}
